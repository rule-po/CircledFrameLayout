<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

 <com.ivjukic.circledframelayout.CircledFrameLayout
     android:id="@+id/clCircle"
     android:layout_width="200dp"
     android:layout_height="200dp"
     app:cfl_background_border_width="10dp"
     app:cfl_foreground_border_width="10dp"
     app:cfl_background_border_color="@color/colorPrimaryDark"
     app:cfl_foreground_border_color="@color/colorAccent"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" >

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="" />
 </com.ivjukic.circledframelayout.CircledFrameLayout>

 <Button
     android:id="@+id/btnProgressPlus"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="16dp"
     android:layout_marginBottom="24dp"
     android:text="+ 10"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintStart_toStartOf="parent" />

 <Button
     android:id="@+id/btnProgressMinus"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="16dp"
     android:layout_marginBottom="24dp"
     android:text="- 10"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintStart_toEndOf="@+id/btnProgressPlus" />

 <Button
     android:id="@+id/btnAutomaticPlay"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="20dp"
     android:layout_marginBottom="24dp"
     android:text="PLAY"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintStart_toEndOf="@+id/btnProgressMinus" />

 <com.ivjukic.circledframelayout.CircledFrameLayout
     android:layout_width="100dp"
     android:layout_height="100dp"
     android:layout_marginTop="32dp"
     android:layout_marginEnd="16dp"
     app:cfl_background_border_width="5dp"
     app:cfl_foreground_border_width="5dp"
     app:cfl_background_border_color="@color/colorPrimaryDark"
     app:cfl_foreground_border_color="@color/colorAccent"
     app:cfl_user_interaction_enabled="false"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintTop_toTopOf="parent">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:scaleType="fitXY"
      app:srcCompat="@drawable/profile" />
 </com.ivjukic.circledframelayout.CircledFrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>